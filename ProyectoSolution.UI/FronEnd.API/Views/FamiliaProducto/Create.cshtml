@model FronEnd.API.Models.FamiliaProducto

@{
    ViewData["Title"] = "Create";
}

<h1>Ingresar una Familia Nueva</h1>

<h4>Familia Producto Nueva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreFamiliaProducto" class="control-label"></label>
                <input asp-for="NombreFamiliaProducto" class="form-control" />
                <span asp-validation-for="NombreFamiliaProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoCabys" class="control-label"></label>
                <input asp-for="CodigoCabys" class="form-control" />
                <span asp-validation-for="CodigoCabys" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ver Familias Productos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
