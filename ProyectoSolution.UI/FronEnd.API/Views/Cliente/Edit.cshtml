                                                                    <label asp-for="Distrito" class="control-label"></label>
                                                                    <input asp-for="Distrito" class="form-control" />
                                                                    <span asp-validation-for="Distrito" class="text-danger"></span>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label asp-for="TelefonoEmpleado" class="control-label"></label>
                                                                    <input asp-for="TelefonoEmpleado" class="form-control" />
                                                                    <span asp-validation-for="TelefonoEmpleado" class="text-danger"></span>
                                                                </div>
                                                                <div class="form-group">
                                                                    <input type="submit" value="Actualizar" class="btn btn-primary" />
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>

                                                                    <div>
                                                                        <a asp-action="Index">Ver Clientes</a>
                                                                    </div>

                                                                                    @section Scripts {
                                                                                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                                                                                    }

                                                                                                }
                                                                                                else
                                                                                                {
                                                                                                    <h2>No tienes acceso a esta pagina</h2>
                                                                                                }





