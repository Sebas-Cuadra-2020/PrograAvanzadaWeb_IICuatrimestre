@model FronEnd.API.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<div class="col-lg-7">
    <div class="card mb-4 py-3 border-left-primary">
        <div class="card-body">
            <div>
                <h4>Informacion Cliente</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CedulaCliente)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CedulaCliente)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FechaIngreso)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaIngreso)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NombreCliente)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NombreCliente)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CorreoEmpleado)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CorreoEmpleado)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Provincia)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Provincia)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Canton)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Canton)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Distrito)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Distrito)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TelefonoEmpleado)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TelefonoEmpleado)
                    </dd>
                </dl>
            </div>
        </div>

        <div>
            <a asp-action="Edit" asp-route-id="@Model.IdCliente">Editar Datos</a> |
            <a asp-action="Index">Ver Clientes</a>
        </div>
    </div>
</div>
