@model IEnumerable<FronEnd.API.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<p>
    <a asp-action="Create">Ingresar nuevo Cliente</a>
</p>
<div class="card shadow mb-4">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                           Cedula
                        </th>
                        <th>
                            Fecha Ingreso
                            
                        </th>
                        <th>
                            Nombre 
                            
                        </th>
                        <th>
                            Correo
                           
                        </th>
                        <th>
                            Provincia
                           
                        </th>
                        <th>
                            Canton
                          
                        </th>
                        <th>
                            Distrito
                         
                        </th>
                        <th>
                            Telefono
                          
                        </th>
                        <th>
                            Accion
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CedulaCliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaIngreso)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreCliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CorreoEmpleado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Provincia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Canton)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Distrito)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TelefonoEmpleado)
                            </td>
                            <td>


                                <a asp-action="Edit" asp-route-id="@item.IdCliente">Editar</a> |
                                <a asp-action="Details" asp-route-id="@item.IdCliente">Detalle</a> |
                                <a asp-action="Delete" asp-route-id="@item.IdCliente">Eliminar</a>
                            
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>